---
import Layout from '../../layouts/Layout.astro';
import EntityList from '../../components/EntityList.astro';
import type { Singer } from '../../types';
import singersData from '../../data/singers.json';

const singers: Singer[] = singersData;
---

<Layout title="歌手/樂團 - 台灣支持名錄">
  <EntityList
    title="歌手/樂團"
    subtitle={`支持台灣的歌手與樂團，共 ${singers.length} 位/組。`}
    items={singers}
    cardClass="singer-card"
  />
</Layout>
