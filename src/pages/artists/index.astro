---
import Layout from '../../layouts/Layout.astro';
import type { Artist } from '../../types';
import artistsData from '../../data/artists.json';

const artists: Artist[] = artistsData;
---

<Layout title="藝術家 - 台灣支持名錄">
  <h1>藝術家</h1>
  <p class="intro">支持台灣的藝術家，共 {artists.length} 位。</p>

  {artists.length > 0 ? (
    <div class="card-grid">
      {artists.map((item) => (
        <div class="card">
          <h3>{item.name}</h3>
          {item.notes && item.notes.startsWith('http') ? (
            <p><a href={item.notes} target="_blank" rel="noopener noreferrer">相關連結 →</a></p>
          ) : item.notes ? (
            <p class="notes">{item.notes}</p>
          ) : null}
        </div>
      ))}
    </div>
  ) : (
    <p class="empty">目前沒有資料，歡迎貢獻！</p>
  )}
</Layout>

<style>
  .notes {
    font-size: 0.85rem;
    color: var(--text-muted);
    margin: 0.25rem 0;
  }
</style>
